# Audtheia Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================================================
# ANTHROPIC CONFIGURATION
# ============================================================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# ROBOFLOW CONFIGURATION
# ============================================================================
# Get your API key from: https://app.roboflow.com/settings/api
ROBOFLOW_API_KEY=your-roboflow-api-key-here
ROBOFLOW_WORKSPACE=your-workspace-name
ROBOFLOW_PROJECT=your-project-name
ROBOFLOW_MODEL_VERSION=1

# Model IDs for different ecosystems
ROBOFLOW_MARINE_MODEL=marine-species-model-id
ROBOFLOW_TERRESTRIAL_MODEL=terrestrial-species-model-id
ROBOFLOW_BIRD_MODEL=bird-species-model-id

# Upload settings
ROBOFLOW_UPLOAD_PROJECT=audtheia-official-database
ROBOFLOW_UPLOAD_ENABLED=true

# ============================================================================
# N8N CONFIGURATION
# ============================================================================
# N8N webhook URLs for workflow communication
N8N_WEBHOOK_BASE_URL=https://your-instance.app.n8n.cloud
N8N_WEBHOOK_ROBOFLOW_DETECTION=https://your-instance.app.n8n.cloud/webhook/roboflow-detection
N8N_WEBHOOK_RTSP_ANALYST=https://your-instance.app.n8n.cloud/webhook/rtsp-analyst
N8N_WEBHOOK_DAILY_REPORTER=https://your-instance.app.n8n.cloud/webhook/daily-reporter

# N8N authentication (if using self-hosted with API)
N8N_API_KEY=your-n8n-api-key-here
N8N_INSTANCE_URL=https://your-instance.app.n8n.cloud

# ============================================================================
# AIRTABLE CONFIGURATION
# ============================================================================
# Get your API key from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=patyour-airtable-api-key-here
AIRTABLE_BASE_ID=appYourBaseIdHere

# Table IDs
AIRTABLE_SPECIES_OBSERVATIONS_TABLE=tblSpeciesObservations
AIRTABLE_ENVIRONMENTAL_MAPPING_TABLE=tblEnvironmentalMapping
AIRTABLE_LONG_TERM_MEMORIES_TABLE=tblLongTermMemories
AIRTABLE_RAS_MEMORIES_TABLE=tblRASMemories
AIRTABLE_TAXONOMIC_CLASSIFIER_TABLE=tblTaxonomicClassifier

# ============================================================================
# SCIENTIFIC DATABASE APIs
# ============================================================================

# GBIF (Global Biodiversity Information Facility)
# Register at: https://www.gbif.org/
GBIF_USERNAME=your-gbif-username
GBIF_PASSWORD=your-gbif-password

# iNaturalist
# API documentation: https://api.inaturalist.org/v1/docs/
INATURALIST_API_KEY=your-inaturalist-api-key-here

# IUCN Red List
# Register at: https://apiv3.iucnredlist.org/api/v3/token
IUCN_API_KEY=your-iucn-api-key-here

# Open-Meteo (Weather/Climate Data)
# Free to use, no API key required
OPEN_METEO_API_URL=https://api.open-meteo.com/v1

# Mapbox (Satellite Imagery and Mapping)
# Get your API key from: https://account.mapbox.com/access-tokens/
MAPBOX_API_KEY=pk.your-mapbox-api-key-here

# ============================================================================
# PERPLEXITY (Deep Research)
# ============================================================================
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# ============================================================================
# VIDEO PROCESSING
# ============================================================================
# RTSP camera configuration
RTSP_CAMERA_URL=rtsp://camera-ip:554/stream
RTSP_USERNAME=camera-username
RTSP_PASSWORD=camera-password

# Video processing settings
VIDEO_FPS=60
VIDEO_RESOLUTION=1920x1080
VIDEO_PROCESSING_THREADS=4

# ============================================================================
# DATABASE CONFIGURATION (Optional - if using local database)
# ============================================================================
# PostgreSQL (optional for local storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=audtheia
POSTGRES_USERNAME=your-username
POSTGRES_PASSWORD=your-password

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/audtheia.log

# Data directories
DATA_DIR=data/
MODELS_DIR=models/
CACHE_DIR=cache/
OUTPUT_DIR=output/

# ============================================================================
# FEATURES FLAGS
# ============================================================================
# Enable/disable specific features
ENABLE_AUDIO_ANALYSIS=true
ENABLE_DAILY_REPORTS=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_DATABASE_BACKUPS=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Processing limits
MAX_CONCURRENT_VIDEOS=2
MAX_CONCURRENT_AI_REQUESTS=5
API_RATE_LIMIT_PER_MINUTE=60

# Cache settings
ENABLE_CACHING=true
CACHE_EXPIRY_HOURS=24

# ============================================================================
# NOTIFICATION SETTINGS (Optional)
# ============================================================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
NOTIFICATION_EMAIL=recipient@institution.edu

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# JWT secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here

# API rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================================================
# NOTES
# ============================================================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your actual API keys and credentials
# 3. The .env file is excluded from git via .gitignore
# 4. Never commit sensitive credentials to version control
# 5. For production, consider using a secrets management service
# 6. Rotate API keys regularly for security
